/ ----------------------- COMIENZO DEL CUERPO ----------------
%section.container.margen_t-b
  .row
    .col-xs-12.col-sm-6.col-md-4.col-sm-offset-6.col-md-offset-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group
          = f.label :email, "Nombre de Usuario (Correo Electrónico):", :class => "tama_11"
          %br/
          = f.email_field :email, autofocus: true, :class => "trim form-control"
        .form-group
          = f.label :password, "Contraseña:", :class => "tama_11"
          %br/
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} caracteres minimo)
          %br/
          = f.password_field :password, autocomplete: "off", :class => "trim form-control", :placeholder => "Escriba aqui su clave", :pattern => ".{6,15}", |
            :oninvalid => "setCustomValidity('El campo debe tener entre 6 y 15 caracteres')", :oninput => "setCustomValidity('')"                           |
        .form-group
          = f.label :password_confirmation, "Confirmar clave:", :class => "tama_11"
          %br/
          = f.password_field :password_confirmation, autocomplete: "off", :class => "trim form-control", :placeholder => "Vuelva a escribir su clave", :pattern => ".{6,15}", |
            :oninvalid => "setCustomValidity('El campo debe tener entre 6 y 15 caracteres')", :oninput => "setCustomValidity('')"                                             |
        %hr/
        .text-center
          = f.submit "Registrarme", :class => "btn boton-verde"
      = render "devise/shared/links"
/
  <h2>Sign up</h2>
  
  <haml_loud> form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| </haml_loud><haml_block>
  <haml_loud> devise_error_messages! </haml_loud>
  
  <div class="field">
  <haml_loud> f.label :email </haml_loud><br />
  <haml_loud> f.email_field :email, autofocus: true </haml_loud>
  </div>
  
  <div class="field">
  <haml_loud> f.label :password </haml_loud>
  <haml_silent>     if @minimum_password_length
  </haml_silent><haml_block>    <em>(<haml_loud> @minimum_password_length </haml_loud> characters minimum)</em>
  </haml_block><br />
  <haml_loud> f.password_field :password, autocomplete: &quot;off&quot; </haml_loud>
  </div>
  
  <div class="field">
  <haml_loud> f.label :password_confirmation </haml_loud><br />
  <haml_loud> f.password_field :password_confirmation, autocomplete: &quot;off&quot; </haml_loud>
  </div>
  
  <div class="actions">
  <haml_loud> f.submit &quot;Sign up&quot; </haml_loud>
  </div>
  </haml_block>
  <haml_loud> render &quot;devise/shared/links&quot; </haml_loud>
